/* pages/activitylist/activitylist.wxss */
.container
{
				width: 100%;
				margin: 0 auto;
				padding: 0 auto;
				margin-top: 10rpx;
}
.container .item
{
		width: 100%;
		height: 120rpx;
		display: flex;
		align-items: center;
		justify-content: space-between;
		margin-bottom: 6rpx;
		border-radius: 10rpx;
		background-color: white;
		padding-left: 10rpx;
}
.item image
{
		width: 100rpx;
		height: 100rpx;
		margin-left: 2%;
}
.item .right
{
		width: 80%;
		height: 120rpx;
		display: flex;
}
.right .title
{
		width: 100%;
		height: 70rpx;
		font-size: 30rpx;
		align-items: center;
		display: flex;
}
.right .author
{
	width: 100%;
	height: 40rpx;
	font-size: 25rpx;

}
.right .time
{
	width: 50%;
	height: 100%;
	padding-top: 72rpx;
	padding-left: 80rpx;
	text-align: left;
	font-size: 25rpx;
}
.le
{
	display: flex;
	flex-direction: column;
	width: 50%;
}
.header
{
	width: 100%;
	text-align: center;
	font-size: 50rpx;
	border-bottom: 1rpx solid white;
	border-radius: 5px;
	background-color: white;
	color: green;
	margin-bottom: 6rpx;

}
