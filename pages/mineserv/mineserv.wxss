/* tab栏 */
.container
{
	width: 100%;
}
.container swiper
{
	width: 100%;
}
.container .tab
{
	width: 100%;
	height: 85rpx;
	display: flex;
	background-color: white;
	position:  relative;
	margin-bottom: 20rpx;
}
.container .tab .item
{
	width: 50%;
	height: 80rpx;
	display: flex;
	align-items: center;
	justify-content: center;
}
.container .tab .bottombar
{
	width: 20%;
	height: 5rpx;
	position: absolute;
	background-color: red;
	bottom: 0;
	left: 15%;
}
/* 订单项 */
.container .order
{
	width: 95%;
	height: 302rpx;
	background-color: white;
	display: flex;
	flex-direction: column;
	border-radius: 5px;
	margin:0 auto;
	padding: 0 auto;
	margin-bottom: 20rpx;
	
}
.container .order .head
{
	width: 100%;
	height: 50rpx;
	border-bottom: 1rpx solid #f4f4f4;
	display: flex;
	padding-left: 20rpx;
	font-size: 25rpx;
	align-items: center;	
}
.container .order .content
{
	width: 100%;
	height: 200rpx;
	display: flex;
	border-bottom: 1rpx solid #f4f4f4;
	font-size: 25rpx;
	line-height: 36rpx;
}
.container .order .content image
{
	width: 150rpx;
	height: 140rpx;
	display: flex;
	margin-top: 20rpx;
	margin-left: 20rpx;
}
.container .order .content .right
{
	display: flex;
	width: auto;
	flex-direction: column;
	height: 100%;
	margin-left: 20rpx;
	padding-top: 20rpx;
}
.container .order .foot
{
	width: 100%;
	height: 50rpx;
	display: flex;
	justify-content: flex-end;
	padding-right: 30rpx;
	align-items: center;
}
.container .order .foot .price
{
	width: 30%;
	height: 100%;
}
.container .order .foot .btn
{
	width: 100rpx;
	height: 40rpx;
	background-color: #ff4200;
	border-radius: 50rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 25rpx;
	color: white;
}

