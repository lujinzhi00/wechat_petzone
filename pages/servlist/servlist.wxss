/* pages/servlist/servlist.wxss */
.container
{
	width: 100%;
	height: auto;
	margin: 0 auto;
	padding: 0 auto;
	background-color: white;

}
.container .show
{
	width: 100%;
	height: 300rpx;
}
.container .show image
{
	width: 100%;
	height: 100%;
}
.container .tip
{
	width: 100%;
	height: 80rpx;
	background-color: #dddddd;
	padding-left: 30rpx;
	display: flex;
	align-items: center;
}
.container .tip .title
{
	width: auto;
	height: 100%;
	border-bottom: 1rpx solid #464646;
	display: flex;
	align-items: center;
}
/* 服务内置块 */
.newservlist
{
	width: 50%;
	height: 230rpx;
	display: inline-block;
	margin-top: 20rpx;
}
.newservlist .newservitem
{
	margin: 0 auto;
	width: 100%;
	height: 100%;
	position: relative;
	text-align: center;
}
.newservlist .newservitem .newservimg
{
	width: 86%;
	height: 160rpx;
	position: absolute;
	left: 7%;
}
.newservlist .newservimg image
{
	width: 100%;
	height: 100%;
  border-radius: 5rpx;
}
.newservlist .newservitem  .newservtitle
{
	width: 100%;
	height: 60rpx;
	position: absolute;
	top: 170rpx;
	display: flex;
	justify-content: space-between;
	font-size: 30rpx;
	padding: 0 9%;
}
.newservlist .newservitem  .newservtitle .price
{
	width: auto;
	height: 100%;
	color: #ff4200;
}