.container .head .loginimage
{
	width: 150rpx;
	height: 150rpx;
	border-radius: 50%;
	display: block;
	overflow: hidden;
}
.container .head .loginimage .image
{
	width: 100%;
	height: 100%;
}
.show
{
	display: block;
}
.hide
{
	display: none;
}
.container
{
	width: 100%;
	height: auto;
	margin: 0 auto;
	padding: 0 auto;
	background-color: rgb(192,192,192,0.6);
}
.container  .head
{
	height: 300rpx;
	width: 100%;
	background-color: white;
	display: flex;
	align-items: center;
	justify-content: center;
}
.container .head .btn
{
	width: 200rpx;
	height: 100rpx;
	position: absolute;
	left: 0;
}
.container .head .btn button
{
	width: 200rpx;
	height: 80rpx;
	background-color: green;
	font-size: 25rpx;
	left: 271rpx;
	top: 63rpx;
	line-height: 47rpx;
	border-radius: 31rpx;
	color: white;
}
.container .content
{
	width: 100%;
	height: auto;
}
.container .content .title
{
	position: relative;
	height: 80rpx;
	width: 100%;
	line-height: 80rpx;
}
.container .content .title .left
{
	color: black;
	position: absolute;
	left: 15rpx;
}
.container .content .title .right
{
	color: grey;
	position: absolute;
	right: 15rpx;
}
.container .content input
{
	width: 100%;
	height: 85rpx;
	padding-left: 15rpx;
	background-color: white;
}
.container .content textarea
{
	width: 100%;
	height: 250rpx;
	background-color: white;
	border-bottom: 1rpx solid rgb(192,192,192,0.6);
	padding-left: 10rpx;
}
.container .bt
{
	width: 100%;
	height: 200rpx;
	padding-top: 35px;
	background-color: white;
}
.container .bt button
{
	background-color: green;
	width: 90%;
	height: 100rpx;
	line-height: 66rpx;	
}
