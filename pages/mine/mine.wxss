.container 
{
	width: 100%;
	height: auto;
	background-color: #f4f4f4;
}
.container .bg
{
	width: 100%;
	height: 200rpx;
	background-color: #fdab14;
}
.container  image
{
	width: 10%;
	height: 120rpx;
}
.container .bg .login
{
	width: 90%;
	height: 180rpx;
	display: flex;
	background-color: white;
	padding: 0 auto;
	margin: 0 auto;
	position: relative;
	top: 110rpx;
	border-radius: 5px;
	align-items: center;
	padding-left: 10rpx;
}
.container .bg .login .image
{
	width: 150rpx;
	height: 150rpx;
}
.container .bg .right
{
	width: 30rpx;
	height: 30rpx;
	margin-left: 20%;
}
.container .login .loginimage
{
	width: 150rpx;
	height: 150rpx;
	border-radius: 50%;
	display: block;
	overflow: hidden;
	margin-left: 20rpx;
}
.container .login .usname
{
	width: auto;
	height: 100%;
	font-size: 45rpx;
	margin-left: 5%;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	padding-left: 30rpx;
}
.container .login .repu
{
	font-size: 28rpx;
}
.container .login .repu text
{
	color: green;
}
.container .login .go
{
	position: absolute;
	width: 10%;
	height: 10%;
	right: 0;
	bottom: 0;
}
.container .mission
{
	width: 100%;
	height: 100rpx;
	margin-top: 20rpx;
}
.container .pre
{
	width: 100%;
	height: 100rpx;
	margin-top: 20rpx;
}
.container .act
{
	width: 100%;
	height: auto;
	
}
.activity
{
	width: 100%!important;
	height: 100rpx;
	margin-top: 10rpx;
	font-size: 35rpx;
	padding: 0 10px;
	display: flex;
	align-items: center;
	justify-content: space-between;

}

.activity image
{

	width: 40rpx;
	height: 40rpx;

}
.container  .co
{
	width: 100%;
	position: relative;
	height: 80rpx;
	margin-top: 10rpx;	
}
.container  .co image
{
	width: 80rpx;
	height: 80rpx;
	position: absolute;
	left: 0;
}
.container  .co .right
{
	width: 86%;
	height: 80rpx;
	position: absolute;
	right: 0;
}
.right .title
{
		width: 50%;
		height: 50rpx;
		font-size: 30rpx;
		position: absolute;
		left: 0;
		top: 0;
}
.right .author
{
		width: 40%;
		height: 40rpx;
		position: absolute;
		left: 0;
		bottom: 0;
		font-size: 25rpx;
}
.right .time
{
		width: 60%;
		height: 120rpx;
		position: absolute;
		right: 0;
		bottom: 0;
		padding-top: 76rpx;
		padding-right: 20rpx;
		text-align: left;
		font-size: 30rpx;
}
.show
{
	display: block;
	
}
.hide
{
	display: none;
}
.container .tab
{
	width: 90%;
	height: auto;
	display: flex;
	flex-direction: column;
	background-color: white;
	padding: 0 auto;
	margin: 0 auto;
	margin-top: 120rpx;
	border-radius: 5rpx;
	padding-bottom: 10rpx;
}
.container .comt
{
	width: 50%;
	height: 100%;
	position: absolute;
	left: 100rpx;
	display: flex;
	align-items: center;
}
.container .btn
{
	width: 90rpx;
	height: 43rpx;
	position: absolute;
	right: 20rpx;
	background-color: green;
	border-radius: 18rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 25rpx;
	color: white;
	top: 25%;
}
.container .tie
{
	width: 100%;
	height: auto;
}
.container .tie .comm
{
	width: 100%;
	height: 80rpx;
	margin-top: 10rpx;
	display: flex;
	align-items: center;
}
.container .tie .comm .coo
{
	width: 80%;
	height: 80rpx;
	display: flex;
}
.container .tie .coo image
{
	width: 80rpx;
	height: 80rpx;
}
.container .tie .coo .cc
{
	width: 60%;
	height: 100%;
	margin-left: 20rpx;
	display: flex;
	align-items: center;
}
.container .tie .comm .bt
{
	width: 12%;
	height: 50%;
	background-color: #ff4200;
	border-radius: 64rpx;
	color: white;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 20%;
	overflow: hidden;
}
button
{
	background-color: white;
	font-weight: normal;
}